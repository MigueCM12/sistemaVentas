<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_all"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PRODUCTO"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etProdCodigo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:drawableLeft="@android:drawable/ic_menu_edit"
                        android:drawablePadding="15sp"
                        android:ems="10"
                        android:hint="Código"
                        android:inputType="numberSigned"
                        android:textColor="#fff"
                        android:textColorHint="#fff" />

                    <Button
                        android:id="@+id/btnProdBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:drawableTop="@android:drawable/ic_search_category_default" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etProdProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="15sp"
                    android:ems="10"
                    android:hint="Producto"
                    android:inputType="textPersonName"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/etProdDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="15sp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Descripción"
                    android:inputType="textMultiLine"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/etProdPrecioC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="15sp"
                    android:ems="10"
                    android:hint="Precio Costo"
                    android:inputType="numberDecimal"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/etProdPrecioV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="15sp"
                    android:ems="10"
                    android:hint="Precio Venta"
                    android:inputType="numberDecimal"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/etProdStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="15sp"
                    android:ems="10"
                    android:hint="Stock"
                    android:inputType="number"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <Button
                    android:id="@+id/btnProdSubir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBIR IMAGEN" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnProdGuardar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guardar" />

                    <Button
                        android:id="@+id/btnProdEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Editar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnProdEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eliminar" />

                    <Button
                        android:id="@+id/btnProdSalir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Salir" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>